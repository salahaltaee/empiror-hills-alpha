rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{uid} {
      allow read: if isSignedIn();
      allow write: if false; // الكتابة عبر Cloud Functions فقط
    }

    match /tickets/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /unitInspections/{code} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /{document=**} {
      allow read: if isSignedIn();
    }
  }
}
